{
    "disableClustering": true,
    "appenders": {
        "info": {
            "type": "file",
            "filename": "logs/info.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "error": {
            "type": "file",
            "filename": "logs/error.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "debug": {
            "type": "file",
            "filename": "logs/debug.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "out": {
            "type": "stdout"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "info",
                "out"
            ],
            "level": "info"
        },
        "error": {
            "appenders": [
                "error",
                "out"
            ],
            "level": "error"
        },
        "debug": {
            "appenders": [
                "debug",
                "out"
            ],
            "level": "debug"
        }
    }
}