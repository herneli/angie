{
  "index_patterns": "trace-entity-*",
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "strings": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword",
              "normalizer": "my_normalizer",
              "fields": {
                "widget": {
                  "type": "keyword",
                  "index": true
                }
              }
            }
          }
        }
      ]
    }
  },
  "settings": {
    "analysis": {
      "normalizer": {
        "my_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    },
    "index.lifecycle.name": "hot-warm-cold.trace",
    "index.lifecycle.rollover_alias": "trace-entity"
  }
}